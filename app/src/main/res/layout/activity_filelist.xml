<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="csueb.zeta.zwriter.zwriter2017f.FileListActivity">

    <Button
        android:id="@+id/file3"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/file_launcher"
        android:text="t"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/file1"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar"
        android:layout_marginStart="150dp" />

    <Button
        android:id="@+id/file2"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/file_launcher"
        android:text="e"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/file1"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar"
        android:layout_marginStart="32dp" />

    <Button
        android:id="@+id/file1"
        android:layout_width="88dp"
        android:layout_height="75dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/file_launcher"
        android:text="z"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar"
        tools:layout_editor_absoluteX="51dp" />

    <Button
        android:id="@+id/sort"
        android:layout_width="188dp"
        android:layout_height="63dp"
        android:layout_marginTop="405dp"
        android:autoText="false"
        android:background="@android:drawable/alert_light_frame"
        android:text="Sort"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar"
        tools:layout_editor_absoluteX="196dp" />

    <TextView
        android:id="@+id/MenuBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/bottom_bar"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/setting"
        android:layout_width="188dp"
        android:layout_height="63dp"
        android:layout_marginTop="405dp"
        android:autoText="false"
        android:background="@android:drawable/alert_light_frame"
        android:text="Setting"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/edit"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@mipmap/ic_launcher"
        app:layout_constraintEnd_toStartOf="parent"
        tools:layout_editor_absoluteX="329dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/deleteFile1"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/delete_launcher"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/file1"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar" />

    <Button
        android:id="@+id/deleteFile2"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/delete_launcher"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/file2"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar" />

    <Button
        android:id="@+id/deleteFile3"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_alignBaseline="@+id/deleteFile2"
        android:layout_alignBottom="@+id/deleteFile2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="0dp"
        android:layout_marginTop="45dp"
        android:background="@mipmap/delete_launcher"
        android:visibility="invisible"
        app:layout_constraintRight_toRightOf="@+id/file3"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar" />

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="382dp"
        android:layout_height="459dp"
        android:background="@android:color/holo_blue_bright"
        app:layout_constraintTop_toBottomOf="@+id/MenuBar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="51dp">

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
